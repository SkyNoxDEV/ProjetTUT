// APPELLE FONCTIONS TOUTES LES 100ms
setInterval(function() {
  getTemp();
  avisTemp();
  getHumid();
  avisHumi();
  getQair();
  avisQair();
  getPart();
  avisPart();
  getUptime();
}, 100); 


